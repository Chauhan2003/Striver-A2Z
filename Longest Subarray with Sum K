JAVA:

class Solution {
    public int longestSubarray(int[] arr, int k) {
        int n = arr.length;
        HashMap<Integer, Integer> map = new HashMap<>();
        
        int curSum = 0;
        int maxLen = 0;
        
        for (int i = 0; i < n; i++) {
            curSum += arr[i];
            
            if (curSum == k) {
                maxLen = i + 1;
            }
            
            if (map.containsKey(curSum - k)) {
                maxLen = Math.max(maxLen, i - map.get(curSum - k));
            }
            
            map.putIfAbsent(curSum, i);
        }
        
        return maxLen;
    }
}
