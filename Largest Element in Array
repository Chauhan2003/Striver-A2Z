JAVA:

class Solution {
    public static int largest(int[] arr) {
        // code here
        int max = Integer.MIN_VALUE;
        
        for (int ele : arr) {
            if (ele > max) {
                max = ele;
            }
        }
        
        return max;
    }
}

PYTHON:

class Solution:
    def largest(self, arr):
        # code here
        max = arr[0];
        
        for i in range(len(arr)):
            if arr[i] > max:
                max = arr[i];
        
        return max
